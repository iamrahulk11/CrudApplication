@model CrudApplicationTest.Models.Student
@{
    ViewData["Title"] = "Create";
}

<div class="container justify-content-center">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Student</h1>
                    <p class="text-center text-danger">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                    <div class="form-group">
                         <label asp-for="Name"></label>
                         <input type="text" asp-for="Name" class="form-control" placeholder="Enter Student Name"/>
                         <span asp-validation-for="Name" class="text-danger"></span>
                     </div>
                     <div class="form-group  mt-2">
                         <label asp-for="Batch"></label>
                         <input type="text" asp-for="Batch" class="form-control" placeholder="Enter Student Batch"/>
                         <span asp-validation-for="Batch" class="text-danger"></span>
                     </div>
                     <div class="form-group  mt-2">
                         <label asp-for="PhoneNo"></label>
                         <input type="number" asp-for="PhoneNo" class="form-control" placeholder="Enter Student Phone Number"/>
                         <span asp-validation-for="PhoneNo" class="text-danger"></span>
                     </div>
                     <div class="form-group mt-2">
                         <label asp-for="State"></label>
                         <input type="text" asp-for="State" class="form-control" placeholder="Enter State"/>
                         <span asp-validation-for="State" class="text-danger"></span>
                     </div>
                     <div class="form-group mt-2">
                         <label asp-for="City"></label>
                         <input type="text" asp-for="City" class="form-control" placeholder="Enter City"/>
                         <span asp-validation-for="City" class="text-danger"></span>
                     </div>
                     <div class="form-group mt-2">
                         <label asp-for="Pincode"></label>
                         <input type="number" asp-for="Pincode" class="form-control mt-2" placeholder="Enter Pincode"/>
                         <span asp-validation-for="Pincode" class="text-danger"></span>
                     </div>
                    <div class="m-2">
                       <input type="submit" value="Submit" class="btn btn-outline-success"/>
                   </div>
                    
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

